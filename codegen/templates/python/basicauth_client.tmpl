{{- define "basicauth_client" -}}
# DO NOT EDIT THIS FILE. This file will be overwritten when re-running go-raml.

import base64

class {{.ClassName}}:
    def __init__(self, http_client):
        self._http_client = http_client

    {{ if .Headers}}
    {{ range $k, $v := .Headers}}
    def set_{{ToLower $v.Name}}_header(self, username, password):
        """"Hash username:password and set header {{$v.Name}} to 'Basic <hash>'"""
        val = base64.b64encode('%s:%s' % (username, password))
        self._http_client.set_header('{{$v.Name}}', 'Basic %s' % val)
    {{ end }}
    {{ else }}
    def set_authorization_header(self, username, password):
        """"Hash username:password and set header Authorization to 'Basic <hash>'"""
        val = base64.b64encode('%s:%s' % (username, password))
        self._http_client.set_header('Authorization', 'Basic %s' % val)
    {{ end }}
{{- end -}}
