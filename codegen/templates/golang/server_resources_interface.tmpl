// DO NOT EDIT THIS FILE. This file will be overwritten when re-running go-raml.
package main

import (
    {{ range $k, $v := .InterfaceImportPaths -}}
        "{{$v}}"
    {{ end -}}
)

// {{.Name}}Interface is interface for {{.Endpoint}} root endpoint
type {{.Name}}Interface interface{
        {{- range $k, $v := .Methods -}}
        // {{ $v.MethodName}} is the handler for {{$v.Verb}} {{$v.Endpoint}}
	  	{{- range $kf, $vf := $v.FuncComments}}
	  	// {{$vf}}{{end}}
		{{$v.MethodName}}(http.ResponseWriter, *http.Request)
	{{ end }}
}

// {{.Name}}InterfaceRoutes is routing for {{.Endpoint}} root endpoint
func {{.Name}}InterfaceRoutes(r *mux.Router, i {{.Name}}Interface)  {
	{{- range $k, $v := .Methods }}
        {{- if $v.Middlewares }}
        r.Handle("{{$v.Route}}", alice.New({{$v.Middlewares}}).Then(http.HandlerFunc(i.{{$v.MethodName}}))).Methods("{{$v.Verb}}")
        {{- else }}
		r.HandleFunc("{{$v.Route}}", i.{{$v.MethodName}}).Methods("{{$v.Verb}}")
        {{- end }}
	{{- end }}
}
{{- end -}}
